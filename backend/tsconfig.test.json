{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    /* Override module to ESNext for Vitest */
    "module": "ESNext",
    "moduleResolution": "bundler",

    /* Disable emit for tests */
    "noEmit": true,

    /* Allow importing .js files with .ts extension */
    "allowImportingTsExtensions": false
  },
  "include": [
    "src/**/*",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
